{
    "name": "pt_backend",
    "version": "1.0.0",
    "description": "Node.js backend for PushTalents",
    "main": "backend.js",
    "scripts": {
        "start": "NODE_ENV=development nodemon index.js",
        "migrate": "npx sequelize-cli db:migrate",
        "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
        "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --detectOpenHandles",
        "pretest": "cross-env NODE_ENV=test npm run migrate:reset"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@bitbucket.org/sawatechnologies/pt_backend.git"
    },
    "keywords": [
        "pushtalents"
    ],
    "dependencies": {
        "bcrypt": "^5.0.0",
        "body-parser": "^1.13.3",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "crypto-js": "^3.1.9-1",
        "custom-env": "^2.0.1",
        "domino": "^2.1.6",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "fs": "^0.0.1-security",
        "handlebars": "^4.7.6",
        "html-metadata-parser": "^1.0.3",
        "i18n": "^0.13.2",
        "jsonwebtoken": "^8.0.1",
        "metascraper": "^5.18.12",
        "metascraper-author": "^5.18.12",
        "metascraper-clearbit": "^5.19.0",
        "metascraper-date": "^5.18.12",
        "metascraper-description": "^5.18.12",
        "metascraper-image": "^5.18.12",
        "metascraper-logo": "^5.18.12",
        "metascraper-publisher": "^5.18.12",
        "metascraper-title": "^5.18.12",
        "metascraper-url": "^5.18.12",
        "moment": "^2.29.1",
        "mysql": "^2.17.1",
        "mysql2": "^2.1.0",
        "node-fetch": "^2.6.1",
        "nodemailer": "^6.4.17",
        "nodemon": "^2.0.7",
        "page-metadata-parser": "^1.1.4",
        "sequelize": "^5.19.0",
        "sqlite3": "^5.0.1",
        "underscore": "^1.8.3"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "devDependencies": {
        "cross-env": "^7.0.2",
        "jest": "^26.0.1",
        "supertest": "^4.0.2"
    },
    "author": "Sawa Technologies",
    "license": "ISC",
    "homepage": "https://bitbucket.org/sawatechnologies/pt_backend#readme"
}
